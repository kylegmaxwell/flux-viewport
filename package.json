{
  "name": "flux-viewport",
  "version": "0.3.1",
  "description": "Flux viewport for visualizing geometry",
  "main": "dist/flux-viewport-bundle.global.js",
  "repository": "git@bitbucket.org:vannevartech/flux-viewport.git",
  "author": "Flux Factory",
  "keywords": [
    "3D"
  ],
  "license": "ISC",
  "homepage": "https://bitbucket.org/vannevartech/flux-viewport",
  "scripts": {
    "lint": "eslint index.js src/**;",
    "test": "npm run clean-test; npm run init; npm run lint && npm run build-common && npm run build-test && npm run run-test",
    "assemble": "cat node_modules/three/three.min.js build/flux-viewport.global.js > build/flux-viewport-bundle.global.js;",
    "release": "echo 'Copy release to dist'; cp build/flux-viewport-bundle.global.js dist/",
    "clean": "rm -f build/flux-viewport*",
    "clean-test": "rm -rf build/test*",
    "init": "mkdir -p build",
    "build-globals": "rollup -c rollup.config.js -f=iife -n=FluxViewport -o=./build/flux-viewport.global.js",
    "build-common": "rollup -c rollup.config.js -f=cjs -o=./build/flux-viewport.common.js",
    "build-test": "rollup -c rollup-test.config.js -f=cjs -o=./build/test.common.js;",
    "run-test": "tape test/test.js",
    "prepublish": "npm run build; npm run release",
    "build": "npm run clean; npm run init; npm run build-globals; npm run assemble"
  },
  "devDependencies": {
    "ajv": "^4.0.3",
    "eslint": "^1.9.0",
    "flux-json-to-three": "0.3.1",
    "flux-three-plugins": "0.1.1",
    "resemblejs": "^2.2.0",
    "rollup": "^0.26.7",
    "rollup-plugin-commonjs": "^2.2.1",
    "rollup-plugin-json": "^2.0.0",
    "rollup-plugin-node-resolve": "^1.5.0",
    "rollup-plugin-replace": "^1.1.0",
    "tape": "^4.2.2",
    "three": "^0.72.0"
  }
}
